<!DOCTYPE html>
<html>
    <head>
        <title>ToDo List</title>
        <link rel="stylesheet" href="css/styles.css">
    </head>
    <body>
        <div class="box">
            <h1>ToDo List</h1>
        </div>
        <div class="box">
            <% dayej.forEach(function(items){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox1" value="<%= items._id%>" onchange="this.form.submit()">
                        <p><%= items.name %></p>
                    </div>
                </form>
            
            <%})%>

            <form action="/" method="POST" class="item">
                <input type="text" name="ele1" placeholder="Enter the task" id="">
                <button type="submit">+</button>
            </form>
        </div>
    </body>
</html>